<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin30"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginRight="@dimen/_18sdp"
            android:background="@drawable/layout_rectangle_top_lr"
            android:gravity="center"
            android:orientation="vertical">

            <food.user.demand.FCViews.AC_BoldTextview
                android:id="@+id/txt_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:textColor="@color/colorAppBackground"
                android:textSize="@dimen/_14ssp" />

            <food.user.demand.FCViews.AC_Textview
                android:id="@+id/txt_alertMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_18sdp"
                android:gravity="center"
                android:maxLines="2"
                android:textSize="@dimen/_10ssp" />

            <LinearLayout
                android:visibility="gone"
                android:layout_marginBottom="@dimen/_15sdp"
                android:id="@+id/lin_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false">
                <LinearLayout
                    android:padding="@dimen/padding5"
                    android:layout_weight="1"
                    android:background="#ddffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <food.user.demand.FCViews.AC_Textview
                        android:textColor="@color/black"
                        android:text="Order Date"
                        android:gravity="start"
                        android:id="@+id/txtorddate"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <food.user.demand.FCViews.AC_Textview
                        android:textColor="@color/black"
                        android:id="@+id/txtto_date"
                        android:gravity="start"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:padding="@dimen/padding5"
                    android:layout_weight="1"
                    android:background="#ddffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <food.user.demand.FCViews.AC_Textview
                        android:textColor="@color/black"
                        android:text="Change Date"
                        android:id="@+id/txtchgdate"
                        android:gravity="start"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <food.user.demand.FCViews.AC_Textview
                        android:textColor="@color/black"
                        android:id="@+id/txtfrom_date"
                        android:gravity="start"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />



                </LinearLayout>

            </LinearLayout>

            <app.smkjewellerslanguage.SMKJewelersUtils.AC_BoldTextview
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:id="@+id/txtproductiondate"
                android:layout_height="wrap_content"
                android:text="Call user"
                android:padding="@dimen/_13sdp"
                android:textColor="@color/colorAppBackground"
                android:textSize="@dimen/_12ssp" />

            <LinearLayout
                android:padding="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <app.smkjewellerslanguage.SMKJewelersUtils.AC_BoldTextview
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/txtcalluser"
                    android:layout_height="wrap_content"
                    android:text="Call user"
                    android:padding="@dimen/_13sdp"
                    android:textColor="@color/colorAppBackground"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginTop="-5dp"
            android:layout_marginRight="@dimen/_18sdp"
            android:orientation="horizontal">



            <LinearLayout
                android:id="@+id/lin_main"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/layout_rectengle_bottom_left_bg"
                android:layout_weight="1">

                <food.user.demand.FCViews.AC_BoldTextview
                    android:id="@+id/txt_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:text="@string/places_cancel"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/txt_alltxtcolor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_del"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_rectengle_bottom_left_right"
                android:layout_weight="1">

                <food.user.demand.FCViews.AC_BoldTextview
                    android:id="@+id/txt_delivered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/mb_white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/layout_rectengle_bottom_right_bg"
                android:layout_weight="1">

                <food.user.demand.FCViews.AC_BoldTextview
                    android:id="@+id/txt_remove"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_3sdp"
                    android:textSize="@dimen/_10ssp"
                    android:gravity="center"
                    android:text="@string/delete"
                    android:textColor="@color/mb_white" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>