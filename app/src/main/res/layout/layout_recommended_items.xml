<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_loader"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <food.user.demand.FCUtils.Loader.LoaderTextView
        android:id="@+id/lt_loaderView"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <food.user.demand.FCUtils.Loader.LoaderTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_margin="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical" />
        <food.user.demand.FCUtils.Loader.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:orientation="vertical" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_dishimage"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:id="@+id/ll_tick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_hot_sellers_outline"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    tools:ignore="DisableBaselineAlignment">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        tools:ignore="RtlHardcoded">

                        <ImageView
                            android:id="@+id/img_tick"
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:src="@drawable/tick"
                            tools:ignore="ContentDescription,RtlHardcoded" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_close"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        tools:ignore="RtlHardcoded">

                        <ImageView
                            android:id="@+id/img_close"
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:src="@drawable/close"
                            tools:ignore="ContentDescription,RtlHardcoded" />

                    </LinearLayout>
                </LinearLayout>

                <food.user.demand.FCViews.CircleImageView
                    android:id="@+id/imgcr_dishImage"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/test_img_250" />

                <food.user.demand.FCViews.CircleImageView
                    android:id="@+id/img_timeOut"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/circular_bg"
                    android:visibility="gone" />


            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/img_VegNonVegType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <food.user.demand.FCUtils.Loader.LoaderTextView
                    android:id="@+id/lt_restaurantname"
                    style="@style/FC_SmallThickTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20sdp" />

            </FrameLayout>

            <food.user.demand.FCUtils.Loader.LoaderTextView
                android:id="@+id/lt_cuisine"
                style="@style/FC_SmallTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_30sdp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@color/txt_lite_gray_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:gravity="center"
                tools:ignore="DisableBaselineAlignment">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <food.user.demand.FCUtils.Loader.LoaderTextView
                        android:id="@+id/lt_currency"
                        style="@style/FC_RegularTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:textColor="@color/txt_site_red_color" />

                    <food.user.demand.FCUtils.Loader.LoaderTextView
                        android:id="@+id/lt_dishPrice"
                        style="@style/FC_RegularTextView"
                        android:layout_width="@dimen/_60sdp"

                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                         />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:orientation="vertical"
                    tools:ignore="RtlHardcoded">

                    <LinearLayout
                        android:visibility="visible"
                        android:id="@+id/ll_addBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rec_bg_stroke_add_gray_layout"
                        android:gravity="center"
                        tools:ignore="UselessParent">

                        <food.user.demand.FCUtils.Loader.LoaderTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:text="@string/add"
                            android:textColor="@color/txt_addcolour"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_addAndMinus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cart_add_outline"
                        android:gravity="center"
                        android:visibility="gone"
                        android:orientation="vertical"
                        tools:ignore="UselessParent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/img_minus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:src="@drawable/minus_s"
                                tools:ignore="ContentDescription" />

                            <food.user.demand.FCViews.AC_Textview
                                style="@style/FC_SmallThickTextView"
                                android:id="@+id/txt_quantity"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                />

                            <ImageView
                                android:id="@+id/img_plus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:src="@drawable/add_s"
                                tools:ignore="ContentDescription" />


                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/pb_cart"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2sdp"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:indeterminateOnly="true"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:indeterminateTint="@color/txt_site_green_color"
                            android:visibility="gone"/>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_nextAvailable"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right|center"
                    android:orientation="vertical"
                    tools:ignore="RtlHardcoded"
                    android:visibility="gone">


                    <food.user.demand.FCUtils.Loader.LoaderTextView
                        android:id="@+id/lt_nextAvailable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/txt_lite_gray_color" />

</LinearLayout>